        <record model="ir.ui.view" id="tarh_bankbiz_form_view">
            <field name="name">tarh.bankbiz.form</field>
            <field name="model">tarh.bankbiz</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="form_string">
                    <sheet>
                        <h1>
                            <label string="Bankbizonylat könyvelése"/>
                        </h1>
                        <group>
                            <field name="th_szamlatul" options="{'no_create' : True}"
                                   placeholder="Könyvelendő társasház"
                                   select="1" on_change="onchange_th_szamlatul(th_szamlatul)"
                                   domain="[('name','ilike','társash')]"/>
                            <field name="bankszamla_thaz" domain="[('partner_id','=',th_szamlatul)]"
                                   placeholder="Társasház bankszámlája"/>
                        </group>
                        <group>
                            <group>
                                <field name="erk_datum" select="1"
                                       on_change="onchange_erk_datum(erk_datum)"/>
                                <field name="biz_datum" select="1" context="{'erteknap':'biz_datum'}"
                                       invisible="1"/>
                                <field name="kivonatszam" placeholder="Bankbizonylat sorszáma"/>
                            </group>
                            <group>
                                <field name="nyitoegyenleg"/>
                                <field name="zaroegyenleg"/>

                            </group>
                        </group>

                        <notebook>
                            <page string="Bizonylat eleme:">
                                <field name="bankbiz_sor">
                                    <form string="Tranzakció rögzítése" version="7.0">
                                        <h1>
                                            <label string="Egy tranzakció könyvelése"/>
                                        </h1>
                                        <group>
                                            <field name="iktatoszam" on_change="onchange_iktatoszam(iktatoszam, parent.th_szamlatul)"/>
                                            <field name="partner"
                                                   domain="['|',('is_company','=',True),'&amp;',('parent_id','=',parent.th_szamlatul),'|',('active','=', True),('active','=',False)]"
                                                   on_change="onchange_partneruj(parent.biz_datum, partner)"/>

                                            <field name="tarh_tranzakcio"
                                                   on_change="onchange_tranzakcio(tarh_tranzakcio)"/>
                                            <field name="erteknap"/>

                                            <field name="partner_banksz" domain="[('partner_id', '=', partner)]"/>
                                            <field name="jovairas" invisible="1"/>


                                            <field name="jovairas_ossz"
                                                   attrs="{'invisible': [('jovairas', '=', False)]}"/>
                                            <field name="terheles_ossz"
                                                   attrs="{'invisible': [('jovairas', '=', True)]}"/>


                                            <field name="postai" attrs="{'invisible': [('jovairas', '=', False)]}"
                                            />
                                            <!--  on_change="csekkes_befiz(postai,partner,parent.th_szamlatul)"-->


                                        </group>
                                        <group>
                                            <group>
                                                <field name="megjegyzes"/>
                                            </group>
                                            <group>
                                                <field name="eloiras"/>
                                            </group>
                                        </group>
                                    </form>
                                    <tree string="Tranzakció elemei">
                                        <field name="partner"/>
                                        <field name="tarh_tranzakcio"/>
                                        <field label="Értéknap" name="erteknap"/>
                                        <field name="jovairas" invisible="1"/>
                                        <field name="terheles_ossz" attrs="{'invisible': [('jovairas', '=', True)]}"/>
                                        <field name="jovairas_ossz" attrs="{'invisible': [('jovairas', '=', False)]}"/>
                                    </tree>
                                </field>
                                <group class="oe_subtotal_footer oe_right" colspan="2"
                                       name="sum_tranzakciok">
                                    <field name="sum_jovairas"/>
                                    <field name="sum_terheles"/>
                                    <div class="oe_subtotal_footer_separator oe_inline">
                                        <label for="sum_tranzakciok"/>
                                        <button name="button_dummy" string="(frissít)" type="object"
                                                class="oe_edit_only oe_link"/>
                                    </div>
                                    <field name="sum_tranzakciok" nolabel="1"
                                           class="oe_subtotal_footer_separator"/>
                                </group>
                                <div class="oe_clear"/>

                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

